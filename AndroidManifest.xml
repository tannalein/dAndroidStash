<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mystictreehouse.dAndroidStash"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="10"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <application android:label="@string/app_name" android:name=".StashApplication" android:icon="@drawable/daicon">
        <activity android:name=".StashActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.AuthorizationActivity"></activity>
        <activity android:name=".activity.GalleryActivity" android:label="Gallery Activity"/>
        <activity android:name=".activity.AccessTokenActivity" android:label="Access Token Activity"/>
        <activity android:name=".activity.UploadActivity"/>
        <activity android:name=".activity.ItemActivity"/>
    </application>
</manifest> 
